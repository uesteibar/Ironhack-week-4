<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag("/movies", method: "get") do %>

    <div class="form-group">
      <%= label_tag(:initial, "Search for something:") %>
      <%= text_field_tag :term, nil, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= submit_tag "Search", class: "btn btn-primary btn-block" %>
    </div>
    <% end %>

  </div>
</div>
