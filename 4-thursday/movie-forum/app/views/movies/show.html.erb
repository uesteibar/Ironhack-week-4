<div class="row">
  <div class="jumbotron col-md-8 col-md-offset-2">
    <h1><%= @movie.title %></h1>
    <p><%= @movie.year %></p>
    <p><%= @movie.synopsis %></p>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [@movie, @comment] do |f| %>
    <div class="form-group">
      <%= f.label :username%>
      <%= f.text_field :username, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :content%>
      <%= f.text_area :content, class: "form-control"%>
    </div>
    <div class="form-group">
      <%= f.submit "Submit", class: "btn btn-primary btn-block" %>
    </div>
    <% end %>
  </div>
</div>
<hr>
<div class="row">
  <% @movie.comments.slice(0, @movie.comments.size - 1).each do |comment| %>
  <div class="media col-md-6 col-md-offset-3">
    <div class="media-body">
      <h4 class="media-heading"><%= comment.username %></h4>
      <p>
        <%= comment.content %>
      </p>
      <p>
        <%= comment.created_at.strftime("%d.%m.%y at %H:%M") %>
      </p>
    </div>
  </div>
  <% end %>
</div>
