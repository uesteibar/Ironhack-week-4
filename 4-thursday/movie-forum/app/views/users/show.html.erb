<div class="row">
  <div class="col-md-6">
    <h2><%= @user.username %></h2>
  </div>

  <div class="col-md-6">
    <h3>Comments:</h3>

    <% @user.comments.each do |comment| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading"><%= comment.user.username %> @ <%= link_to comment.movie.title, movie_path(comment.movie) %></h4>
          <p>
            <%= comment.content %>
          </p>
          <p>
            <%= comment.created_at.strftime("%d.%m.%y at %H:%M") %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>
