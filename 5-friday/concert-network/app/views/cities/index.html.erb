<div class="row">
  <div class="col-md-5 col-md-offset-1">
    <% @cities.each do |city| %>

    <div class="panel panel-default">
      <div class="panel-body row">
        <div class="col-xs-9">
          <h4>
            <%= city.name %>
          </h4>
        </div>
        <div class="col-xs-3">
          <%= form_tag(city_path(city), method: "delete") do%>
            <%= submit_tag "Delete", class: "btn btn-danger"%>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>

  <div class="col-md-5">

    <%= render 'layouts/errors', model: @city  %>

    <%= form_for [@city] do |f| %>
    <div class="form-group">
      <%= f.label :name%>
      <%= f.text_field :name, class: "form-control"%>
    </div>
    <div class="form-group">
      <%= f.submit "Submit", class: "btn btn-primary btn-block" %>
    </div>
    <% end %>

  </div>
</div>
