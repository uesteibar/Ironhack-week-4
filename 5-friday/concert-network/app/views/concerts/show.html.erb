<div class="row">
  <div class="jumbotron col-md-8 col-md-offset-2">
    <h1>
      <%= @concert.band %>
    </h1>
    <p>
      <%= @concert.date.strftime("%d.%m.%y") %>
    </p>
    <p>
      <%= "#{@concert.price} â‚¬" %>
    </p>
    <p>
      <%= "#{@concert.venue} - #{@concert.city}" %>
    </p>
    <p>
      <%= @concert.description %>
    </p>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [@concert, @comment] do |f| %>
    <div class="form-group">
      <%= f.label :username%>
      <%= f.text_field :username, class: "form-control"%>
    </div>
    <div class="form-group">
      <%= f.label :content%>
      <%= f.text_area :content, class: "form-control"%>
    </div>
    <div class="form-group">
      <%= f.submit "Submit", class: "btn btn-primary btn-block" %>
    </div>
    <% end %>
  </div>
</div>
<hr>
<div class="row">
  <% @concert.comments.slice(0, @concert.comments.size - 1).reverse.each do |comment| %>
  <div class="media col-md-6 col-md-offset-3">
    <div class="media-body">
      <h4 class="media-heading"><%= comment.username %></h4>
      <p>
        <%= comment.content %>
      </p>
      <p>
        <%= comment.created_at.strftime("%d.%m.%y at %H:%M") %>
      </p>
    </div>
  </div>
  <% end %>
</div>
